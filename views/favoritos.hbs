<header>
  <div class="nav-wrapper">
    <nav>
      <div class="bg">

        <input class="hidden" type="checkbox" id="menuToggle" />
        <label class="menu-btn" for="menuToggle">
          <div class="menu"></div>
          <div class="menu"></div>
          <div class="menu"></div>
        </label>
        <div class="nav-container">
          <ul class="nav-tabs">
            {{#if isUserLoggedIn}}
              <li id="subrallado-menú" class="nav-tab"><a
                  href="/"
                >Inicio</a></li>
              <li class="nav-tab"><a href="/favoritos">Favoritos</a></li>
              <li class="nav-tab"><a href="/event">Eventos</a></li>
              <li class="nav-tab"><a href="/event/attractions">Artistas</a></li>

              <li class="nav-tab"><a href="/auth/logout">Cerrar Sesión</a></li>
            {{else}}
              <li class="nav-tab"><a href="/auth/signup">Registrarse</a></li>
              <li class="nav-tab"><a href="/auth/login">Iniciar Sesión</a></li>
            {{/if}}
          </ul>
        </div>
      </div>
    </nav>
  </div>
</header>
<main>
  <div class="container-list">

    <div class="title">
      <p> Favoritos </p>
    </div>

    <div class="list">
      {{#if favoritos}}
        {{#each favoritos}}

          <div class="card-container">
            <img class="img-card" src="{{this.images}}" alt="" />
            <div class="text-card">
              <div class="title-card">
                <h2> {{this.name}}</h2>
              </div>
              <div class="country-card">
                <p>
                  {{this.city}},
                  {{this.country}}</p>
              </div>
              <div class="address-card">
                <p>{{this.address}}</p>
              </div>

              <div class="date-card">
                <h4>{{this.localDate}}</h4>
              </div>
              <div class="url">
                <a class="ticket-btn" href="{{this.url}}">Tickets</a>

                <form action="/favoritos/{{this._id}}/delete" method="POST">
                  <div class="delete-btn">
                    <button type="submit">
                      <img src="/images/delete.png" alt="delete icon" />
                    </button>
                  </div>
                </form>
              </div>
            </div>

          </div>
        {{/each}}
      {{else}}
        <p class="no-favs">No hay ningun elemento</p>
      {{/if}}
    </div>
  </div>
</main>